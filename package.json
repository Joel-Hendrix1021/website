{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "12.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@types/react": "17.0.34",
    "eslint": "<8.0.0",
    "eslint-config-next": "12.0.3",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "stylelint": "^14.0.1",
    "stylelint-config-standard": "^23.0.0",
    "typescript": "4.4.4"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "next lint --cache --cache-location node_modules/.cache/ --fix",
    "*.css": "stylelint --cache --cache-location node_modules/.cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
